<?xml version="1.0"?>
<launch>
  <node name="itf" pkg="rviz_interactive_tf" type="interactive_tf"
    output="screen" ns="itf1">
    <param name="parent_frame" value="map" />
    <param name="frame" value="tf1" />
    <param name="base_x" value="-0.2" />
    <param name="base_z" value="1.0" />
  </node>

  <group ns="camera1">
    <node name="camera_tf" pkg="rviz_interactive_tf" type="interactive_tf"
      output="screen">
      <param name="parent_frame" value="map" />
      <param name="frame" value="camera1" />
      <param name="base_z" value="-2.0" />
    </node>
    <node name="dr_camera_info" pkg="vimjay" type="dr_camera_info.py"
      output="screen" >
      <remap from="camera_info" to="camera_info" />
      <param name="frame_id" value="camera1" />
      <param name="width" value="640" />
      <param name="height" value="360" />
      <param name="cx" value="320" />
      <param name="cy" value="180" />
      <param name="fx" value="220" />
      <param name="fy" value="220" />
    </node>

    <node name="sdl2_sprites" pkg="sdl2_ros" type="sdl2_sprites.py"
      output="screen">
      <rosparam param="images" subst_value="true">
        map: "$(find vimjay)/data/diffract1.png"
        tf1: "$(find vimjay)/data/gradient_spiral.png"
      </rosparam>
    </node>

  </group>

</launch>
